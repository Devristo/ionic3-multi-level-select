{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    // "no-unused-variable": [
    //   true
    // ],
    // Custom
    "trailing-comma": [false, {
      "multiline": "always",
      "singleline": "never"
    }],
    "interface-name": [false, "always-prefix"],
    // General
    "no-console": [true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [
      true,
      200
    ],
    "max-classes-per-file": [false, 1],
    "no-string-literal": false,
    // "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "new-parens": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    // Angular 2
    "angular-whitespace": [true, "check-interpolation", "check-semicolon"],
    "banana-in-box": true,
    "templates-no-negated-async": true,
    "directive-selector": [true, "attribute", "ryaa", "camelCase"],
    "component-selector": [true, "element", "ryaa", "kebab-case"],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-output-on-prefix": true,
    "no-forward-ref": true,
    "use-view-encapsulation": false,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "pipe-prefix": [true, "ryaa"],
    "component-class-suffix": false,
    "directive-class-suffix": true,
    "pipe-impure": true
  }
}
